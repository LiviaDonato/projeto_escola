<%- include('../includes/header.ejs', {titulo: 'Lista de Alunos'}) %>
<main>
    <h2>Lista de Alunos</h2>
    <a href="/alunos/novo" class="btn btn-primary">Adicionar Aluno</a>
    <% if (typeof mensagem != 'undefined') { %>
        <p class="erro"><%= mensagem %></p>
    <% } %>
    <form action="/alunos/" method="get" class="form form-consulta">
        <input type="text" name="busca" placeholder="Buscar todos os campos abaixo" value="<%=busca%>">
        <button type="submit" class="btn btn-primary">Buscar</button>
        <select name="ordenar" onchange="this.form.submit()">
            <option value="nome" <%= ordenar == 'nome' ? 'selected' : '' %>>Ordenar por Nome</option>
            <option value="idade" <%= ordenar == 'idade' ? 'selected' : '' %>>Ordenar por Idade</option>
            <option value="email" <%= ordenar == 'email' ? 'selected' : '' %>>Ordenar por Email</option>
            <option value="nome_turma" <%= ordenar == 'nome_turma' ? 'selected' : '' %>>Ordenar por Turma</option>
            <option value="sexo" <%= ordenar == 'sexo' ? 'selected' : '' %>>Ordenar por Sexo</option>
            <option value="cpf" <%= ordenar == 'cpf' ? 'selected' : '' %>>Ordenar por CPF</option>
        </select>
    </form>
    <table class="dados-table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Email</th>
                <th>Turma</th>
                <th>Sexo</th>
                <th>CPF</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% for (let aluno of vetorDados) { %>
                <tr>
                    <td><%= aluno.nome %></td>
                    <td><%= aluno.idade %></td>
                    <td><%= aluno.email %></td>
                    <td><%= aluno.nome_turma %></td>
                    <td><%= aluno.sexo %></td>
                    <td><%= aluno.cpf %></td>
                    <td>
                        <a href="/alunos/<%= aluno.id_aluno %>/editar" class="btn btn-edit"> Editar </a>
                        <form action="/alunos/<%= aluno.id_aluno %>/deletar" method="post">
                            <button type="submit" class="btn btn-delete">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </main>
<%- include('../includes/footer.ejs') %>