<%- include('../includes/header.ejs', {titulo: 'Dashboard' }) %>
    <main class="container-fluid">
        <div class="bg-primary text-white text-center py-3 mb-4">
            <h1>Dashboard - Gerenciamento Escolar</h1>
        </div>

        <!-- Cards principais com valores -->
        <section class="row mb-4 text-center">
            <!-- Card Total de Alunos -->
            <div class="col-md-3">
                <div class="card shadow-sm card-dec">
                    <div class="card-body">
                        <h5 class="card-title">Total de Alunos</h5>
                        <p class="card-text display-4"><%= totalAlunos %></p>
                    </div>
                </div>
            </div>
            <!-- Card Total de Disciplinas -->
            <div class="col-md-3">
                <div class="card shadow-sm card-dec">
                    <div class="card-body">
                        <h5 class="card-title">Total de Disciplinas</h5>
                        <p class="card-text display-4"><%= totalDisciplinas %></p>
                    </div>
                </div>
            </div>
            <!-- Card Taxa de Aprovação -->
            <div class="col-md-3">
                <div class="card shadow-sm card-dec">
                    <div class="card-body">
                        <h5 class="card-title">Taxa de Aprovação</h5>
                        <p class="card-text display-4"><%= taxaAprovacao.toFixed(2) %>%</p>
                    </div>
                </div>
            </div>
            <!-- Card Alunos Reprovados -->
            <div class="col-md-3">
                <div class="card shadow-sm card-dec">
                    <div class="card-body">
                        <h5 class="card-title">Alunos Reprovados</h5>
                        <p class="card-text display-4"><%= totalReprovados %></p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Seção dos Gráficos -->
        <section class="row mb-4 text-center">
            <!-- Gráfico de Barras -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        Média por Disciplinas
                    </div>
                    <div class="card-body">
                        <canvas id="barrasMediaDisciplina"></canvas>
                    </div>
                </div>
            </div>
            <!-- Gráfico de Pizza -->
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        Aprovação dos Alunos
                    </div>
                    <div class="card-body">
                        <canvas id="pizzaAprovacaoAlunos"></canvas>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <script>
        // Recebendo o vetor mediaDisciplinas com o resultado da consulta do Banco de Dados
        const dadosMediaDisciplinas = <%- JSON.stringify(mediaDisciplinas) %>

        // Extraindo nomes e médias para gerar vetores individuais para os dados do gráfico
        const nomesDisciplinas = dadosMediaDisciplinas.map(d => d.nome_disciplina)
        const mediasDisciplinas = dadosMediaDisciplinas.map(d => d.media)

        // Bar Chart - Média de Notas por Disciplina
        const barCtx = document.getElementById('barrasMediaDisciplina').getContext('2d');
            new Chart(barCtx, {
                type: 'bar',
                data: {
                    labels: nomesDisciplinas,
                    datasets: [{
                        label: 'Média de Notas',
                        data: mediasDisciplinas,
                        backgroundColor: ['#007bff', '#28a745', '#ffc107', '#dc3545', '#6f42c1']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true },
                        tooltip: { enabled: true }
                    }
                }
            });

            // Gráfico de Pizza das Aprovações dos Alunos
            const dadosAprovacaoAlunos = <%- JSON.stringify(statusAluno) %>
            const statusAluno = dadosAprovacaoAlunos.map(x => x.status)
            const qtdAluno = dadosAprovacaoAlunos.map(x => x.total)

            const pieCtx = document.getElementById('pizzaAprovacaoAlunos').getContext('2d');
            new Chart(pieCtx, {
                type: 'pie',
                data: {
                    labels: statusAluno,
                    datasets: [{
                        data: qtdAluno,
                        backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true },
                        tooltip: { enabled: true }
                    }
                }
            });
    </script>
    <%- include('../includes/footer.ejs') %>